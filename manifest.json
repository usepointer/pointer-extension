{
    "name": "Pointer Assistant",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Summarize articles, query documentation, and extract data from any webpage. Pointer helps you find exactly what you need, instantly.",
    "permissions": [
        "sidePanel",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*"
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "side_panel": {
        "default_path": "sidepanel/index.html"
    },
    "commands": {
        "toggle-side-panel": {
            "suggested_key": {
                "mac": "Command+B"
            },
            "description": "Open the Pointer side panel"
        }
    },
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}